@model List<BCDHX.Moduns.Models.Silder>
<div class="hero-section section mb-30">
    <div class="container">
        <div class="row">
            <div class="col">
                <!-- Hero Slider Start -->
                <div class="hero-slider hero-slider-one">
                    <!-- Hero Item Start -->
                    @foreach (var item in Model)
                    {
                        <div class="hero-item">
                            <div class="row align-items-center justify-content-between">
                                <!-- Hero Content -->
                                <div class="hero-content col">
                                    @Html.Raw(item.NameSlider)
                                    @Html.ActionLink("Mua Ngay","Index","Product")
                                </div>
                                <!-- Hero Image -->
                                <div class="hero-image col">
                                   <img src="@Url.Content("~/Content/ImageUploaded/ImageBanner/"+item.Img)"/> 
                                </div>
                            </div>
                        </div>
                    }
                    <!-- Hero Item End -->  
                </div><!-- Hero Slider End -->

            </div>
        </div>
    </div>
</div>