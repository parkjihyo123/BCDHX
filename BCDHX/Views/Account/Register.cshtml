
@{
    ViewBag.Title = "Đăng Ký Thành Viên";
    Layout = null;
}
<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Bà Chị Diệu Hiền - @ViewBag.Title</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/MainPage/images/iconBCDH.jpg">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Oswald:200,300,400,500,600,700" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/DevExtremeBundle")
</head>
<body>
    @Html.Partial("~/Views/Home/HeaderCustom.cshtml")
    @Html.Partial("~/Views/Home/PageBannerForRg.cshtml")
    @Html.Partial("~/Views/Cart/CartPartial.cshtml")
    <div class="register-section section mt-90 mb-90">
        <div class="container">
            <div class="row">
                <!-- Register -->
                <div class="col-md-6 col-12 d-flex">
                    <div class="ee-register">
                        <h3>Bạn Muốn Trở Thành Thành Viên Của Bà Chị Shop</h3>
                        <p>Cung cấp những dịch vụ tốt nhất cho khách hàng là phương châm của chúng tôi</p>
                        <!-- Register Form -->
                        <form id="dangkyform">
                            <div class="row">
                                <div class="col-12 mb-30"><div id="sumerror"></div></div>
                                <div class="col-12 mb-30"> <input type="text" name="Email" id="Email" placeholder="Sử dụng email làm tên đăng nhập"></div>
                                <div class="col-12 mb-30"><input type="text" name="Fullname" id="Fullname" placeholder="Họ Và Tên" required></div>
                                <div class="col-12 mb-30"><input type="text" name="Address" id="Address" placeholder="Địa Chỉ" required></div>
                                <div class="col-12 mb-30"><input type="password" name="Password" id="Password" placeholder="Mật Khẩu"></div>
                                <div class="col-12 mb-30"><input type="password" name="Repassword" id="Repassword" placeholder="Nhập Lại mật khẩu" required><div id="error"></div></div>
                                <div class="col-12"><input type="submit" value="Đăng Ký" id="subbt"></div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-1 col-12 d-flex">
                    <div class="login-reg-vertical-boder"></div>
                </div>
                <!-- Account Image -->
                <div class="col-md-5 col-12 d-flex">
                    <div class="ee-account-image">
                        <h3>Tải Ảnh Đại Diện</h3>
                        <img src="~/Content/MainPage/images/account-image-placeholder.jpg" alt="Account Image Placeholder" class="image-placeholder">
                        <div id="uploadimge">
                        </div>
                        <input type="hidden" id="LinkImageUser">
                        <p>File ảnh hỗ trợ .jpg, .jpeg, .gif, .png.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("~/Views/Home/BrandsPartial.cshtml")
    @Html.Partial("~/Views/Home/footer.cshtml")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/DevExtremeBundle")
    @Scripts.Render("~/bundle/cart")
    <script src="@Url.Content("~/ScriptsBundle/AccountSC.min.js")"></script>
</body>
</html>