@model BCDHX.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/HomeTempates/_Layout.cshtml";
}

<div class="col-md-4 col-12 d-flex">
</div>
<div class="col-md-4 col-12 d-flex">
    <div class="ee-login">
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Code)
            <form>
                <div class="row">
                    <div class="col-12 mb-10"><h2>Tạo lại mật khẩu </h2></div>
                    <div class="col-12 mb-20">
                        @Html.TextBoxFor(m => m.Email, new { @type = "text", @readonly = "" })
                    </div>
                    <div class="col-12 mb-20"> @Html.PasswordFor(m => m.Password, new { @type="password", @placeholder= "Nhập mật khẩu mới",@required="" })</div>
                    <div class="col-12 mb-20"> @Html.PasswordFor(m => m.ConfirmPassword, new { @type = "password", @placeholder = "Nhập lại mật khẩu mới", @required = "" })</div>
                    <div class="col-12"><input type="submit" value="Đăng nhập"></div>
                </div>
            </form>
        }

    </div>
</div>
