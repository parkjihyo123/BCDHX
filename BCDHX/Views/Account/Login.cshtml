@{
    ViewBag.Title = "Đăng Ký Thành Viên";
    Layout = null;
}
<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Bà Chị Diệu Hiền - @ViewBag.Title</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/MainPage/images/iconBCDH.jpg">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="@Url.Content("~/Content/LoadingScreen/css/jquery.loadingModal.css")">
    <link href="@Url.Content("~/Content/SweetAlret/sweetalert2.min.css")" rel="stylesheet" />
    @Styles.Render("~/Content/DevExtremeBundle")
</head>
<body>
    @Html.Partial("~/Views/Home/HeaderForShorter.cshtml")
    @Html.Partial("~/Views/Home/PageBannerForLoginPartial.cshtml")
    <!-- Login Section Start -->
    <div class="login-section section mt-90 mb-90">
        <div class="container">
            <div class="row">
               <!-- Login -->
                <div class="col-md-6 col-12 d-flex">
                    <div class="ee-login">
                        <h3>Đăng nhập bằng tài khoản </h3>
                        <p>Hãy đăng nhập để được hưởng ưu đãi tốt nhất từ Bà Chị Diệu Hiền , mua hàng , sử dụng giảm giá v.v.v</p>
                        <!-- Login Form -->
                        <form id="LoginForm">
                            <div class="row">
                                <div class="col-12 mb-30"><div id="sumerror"></div></div>
                                <div class="col-12 mb-30"><input type="text" id="Username" placeholder="Email đã đăng kí để đăng nhập" required=""></div>
                                <div class="col-12 mb-20"><input type="password" id="Password" placeholder="Mật khẩu" required=""></div>
                                <div class="col-12 mb-15">
                                    <input type="checkbox" id="remember_me">
                                    <label for="remember_me">Ghi nhớ</label>
                                    <a href="#">Quên mật khẩu</a>
                                </div>
                                <div class="col-12"><input type="submit" value="Đăng nhập"></div>
                            </div>
                        </form>
                        <h4>Bạn Chưa Có Tài Khoản ?<a href="/Account/Register">Đăng Kí Ngay!</a></h4>
                    </div>
                </div>
                <div class="col-md-1 col-12 d-flex">
                    <div class="login-reg-vertical-boder"></div>
                </div>
                <!-- Login With Social -->
                <div class="col-md-5 col-12 d-flex">
                    <div class="ee-social-login">
                        <h3>Hoặc cũng có thể đăng nhập bằng</h3>
                        <a href="#" class="facebook-login">Đăng nhập với <i class="fa fa-facebook"></i></a>
                        <a href="#" class="twitter-login">Đăng nhập với <i class="fa fa-twitter"></i></a>
                        <a href="#" class="google-plus-login">Đăng nhập với <i class="fa fa-google-plus"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- Login Section End -->
    @Html.Partial("~/Views/Home/BrandsPartial.cshtml")
    @Html.Partial("~/Views/Home/footer.cshtml")
    @Scripts.Render("~/bundles/jquery")
    <!-- Popper JS -->
    <script src="@Url.Content("~/Content/MainPage/js/popper.min.js")"></script>
    <!-- Bootstrap JS -->
    <script src="@Url.Content("~/Content/MainPage/js/bootstrap.min.js")"></script>
    <!-- Plugins JS -->
    <script src="@Url.Content("~/Content/MainPage/js/plugins.js")"></script>
    <!-- Main JS -->
    <script src="@Url.Content("~/Content/MainPage/js/main.js")"></script>
    <script src="@Url.Content("~/Content/LoadingScreen/js/jquery.loadingModal.js")"></script>
    <script src="@Url.Content("~/Content/SweetAlret/sweetalert2.all.js")"></script>
    @Scripts.Render("~/Scripts/DevExtremeBundle")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.js"></script>
    <script src="@Url.Content("~/ScriptsBundle/AccountSC.js")"></script>

</body>

</html>